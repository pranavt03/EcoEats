<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pranavtayi.myapplication.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txtScan"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Scan Ingredients"
        android:onClick="onScanBtnClicked"
        android:id="@+id/txtScan"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtScan"
        android:text="Manually Select"
        android:id="@+id/txtManually"/>

    <Button
        android:id="@+id/txtAboutUs"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtManually"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:text="About Us" />


</RelativeLayout>